<section
  id="hero"
  class="hero"
>
  <div class="container">
    <h1 class="hero__title">{{title}}</h1>
    {{> badge-widget message="Бесплатная консультация" }}

    {{#if back}}
    <a href="{{back}}" class="hero__back">
      <img src="/images/arrow-left_white.png" alt="Назад" />
      <span>{{ back-text }}</span>
    </a>
    {{/if}}
  </div>
</section>
